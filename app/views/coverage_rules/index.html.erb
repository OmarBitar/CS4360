<h1>Coverage Rules</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coverage_rules.each do |coverage_rule| %>
      <tr>
        <td><%= coverage_rule.user_id %></td>
        <td><%= link_to 'Show', coverage_rule %></td>
        <td><%= link_to 'Edit', edit_coverage_rule_path(coverage_rule) %></td>
        <td><%= link_to 'Destroy', coverage_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coverage Rule', new_coverage_rule_path %>
<div id="calendar"></div>
