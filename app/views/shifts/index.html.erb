<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th colspan='2'>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Employee</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
<!--    Time formats: https://ruby-doc.org/stdlib-2.6.1/libdoc/date/rdoc/DateTime.html#method-i-strftime-->
        <td><%= shift.date.strftime("%A") %></td>
        <td><%= shift.date.strftime("%D") %></td>
        <td><%= shift.start.strftime("%_I:%M %p") %></td>
        <td><%= shift.end.strftime("%_I:%M %p") %></td>
        <td><%= "#{shift.employee.first_name} #{shift.employee.last_name}" unless shift.employee.nil? %></td>
        <td><%= shift.role.name unless shift.role.nil? %></td>

        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_shift_path %>
